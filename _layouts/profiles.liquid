---
layout: page
---
<style>
  /* Two-per-row grid for undergrads */
  .profile-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 28px;
    margin-top: 18px;
  }
  .student-card {
    text-align: center;
  }
  .student-card img {
    width: 250px;
    height: 250px;
    object-fit: cover;
    border-radius: 50%; /* circular like grads */
    display: block;
    margin: 0 auto 10px auto;
  }
  .student-name {
    font-weight: 700;
    color: #000;
    margin-bottom: 4px;
  }
  .student-subtitle {
    font-size: 0.92em;
    color: #555;
  }
</style>

<div class="post">
  <article>
    {% if page.profiles %}
      {% for profile in page.profiles %}
        {% if profile.header %}
          <div class="clearfix">{{ profile.header }}</div>

        {% elsif profile.grid %}
          <div class="profile-grid clearfix">
            {% for student in profile.students %}
              <div class="student-card">
                {%- comment -%} Undergrad image or placeholder {%- endcomment -%}
                {% assign student_img = student.image | default: 'pic.jpeg' %}
                {% assign student_img_path = student_img | prepend: 'assets/img/' %}
                {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3 }}px, (min-width: 576px) 30vw, 95vw{% endcapture %}
                {%
                  include figure.liquid
                  loading="eager"
                  path=student_img_path
                  class="img-fluid z-depth-1 rounded-circle"
                  sizes=sizes
                  alt=student.name
                %}
                <div class="student-name">{{ student.name | markdownify | remove: '<p>' | remove: '</p>' }}</div>
                {% if student.subtitle %}
                  <div class="student-subtitle">{{ student.subtitle }}</div>
                {% endif %}
              </div>
            {% endfor %}
          </div>

        {% else %}
          <hr>
          <div class="profile float-{% if profile.align == 'left' %}left{% else %}right{% endif %}">
            {% if profile.image %}
              {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
              {% if profile.image_circular %}
                {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
              {% else %}
                {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
              {% endif %}
              {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3 }}px, (min-width: 576px) 30vw, 95vw{% endcapture %}
              {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
            {% endif %}
            {% if profile.more_info %}
              <div class="more-info">{{ profile.more_info }}</div>
            {% endif %}
          </div>

          <div class="clearfix">
            {% if profile.content %}
              {% capture profile_content %}{% include_relative {{ profile.content }} %}{% endcapture %}
              {{ profile_content | markdownify }}
            {% else %}
              {{ content }}
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </article>
</div>
